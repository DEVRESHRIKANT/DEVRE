<!DOCTYPE HTML>
<html>
<head>
    <title>@ViewBag.Title - TopBar</title>
    <meta name="viewport" charset="utf-8" content="width=device-width" initial-scale="1.0" />
    <script src="http://code.jquery.com/jquery.js"></script>
    <link href="~/Content" rel="stylesheet" media="screen" />
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" media="screen" />
    @Styles.Render("/Content")
    @Scripts.Render("/Scripts")
</head>
<body>  
    <form>
        <div id="ShubhamTopBar" class="shubh-top-bar" style="width:auto">
            <table style="width:100%; background-color:aqua; height:100%">
                <tr style="width:100%; background-color:aqua">
                    <td rowspan="3" style="width:10%;  background-color:aqua">
                        <img src="~/Images/Shubham_2018.jpg" style="width:100px; height:100px" class="shubh_image" alt="shubh_image" />
                    </td>

                    <td rowspan="3" style="width:70%; height:50px; background-position: center center; font-weight: bold; font-size:150%" align="center">
                        <div id="smita-description">Burnaby South Elementary</div>
                    </td>
                    <td rowspan="3" style="width:20%; text-decoration:none; height:50px">
                        <table style="width:100%; font-size:large">
                            <tr>
                                <td>
                                    <div id="div5">Burnaby South Elementary</div>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <div id="div2">Burnaby, Canada</div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <div id="div4">Phone: 604-604-6044</div>
                                </td>
                            </tr>
                        </table>
                    </td>
                </tr>
            </table>
        </div>
    </form>
</body>
</html>